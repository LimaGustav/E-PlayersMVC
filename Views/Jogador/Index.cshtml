@model Jogador

@{
    ViewData["Title"] = "Jogadores";
}

<form method="POST" action='@Url.Action("Cadastrar")'>

    <label for="">ID</label>
    <input type="text" name="IdJogador">

    <label for="">Nome</label>
    <input type="text" name="NomeJogador">

    <label for="">Equipe do Jogador</label>
    <input type="text" name="EquipeJogador">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Equipe</th>
    </thead>

    <tbody>

        @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.NomeJogador</td>
                <td>@jogador.IdEquipe</td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a></td>
            </tr>
        }

    </tbody>

</table>